<script type="text/javascript">
function showDiv(select){
   if(select.value==1){
    document.getElementById('hidden_div_osc').style.display = "block";
	document.getElementById('hidden_div_jur').style.display = "none";
   } 
   else
   {
      if(select.value==2){
    	document.getElementById('hidden_div_jur').style.display = "block";
		document.getElementById('hidden_div_osc').style.display = "none";
   	}
	  else{
      document.getElementById('hidden_div_jur').style.display = "none";
	  document.getElementById('hidden_div_osc').style.display = "none";
	  }
   }
} 
</script>
  
